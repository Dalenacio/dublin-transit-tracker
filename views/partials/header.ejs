<header class="p-3 mb-3 border-bottom">
    <div class="container">
      <div class="d-flex flex-wrap align-items-center justify-content-center justify-content-lg-start">
        <a href="/" class="d-flex align-items-center mb-2 mb-lg-0 link-body-emphasis text-decoration-none">
          <svg class="bi me-2" width="40" height="32" role="img" aria-label="Bootstrap"><use xlink:href="#bootstrap"></use></svg>
        </a>

        <ul class="nav col-12 col-lg-auto me-lg-auto mb-2 justify-content-center mb-md-0">
          <li><a href="/" class="nav-link fs-3 fw-bold px-2 link-body-emphasis">Dublin Transit Tracker</a></li>
          <li><a href="/" class="nav-link fs-5 fw-normal px-4 mt-2 link-secondary">Home</a></li>
        </ul>

        

        <form class="col-12 col-lg-auto mb-3 mb-lg-0 me-lg-3" role="search" onsubmit="findRouteId(this.form.elements.route.value)">
          <input type="search" name="route" class="form-control" autocomplete="off" placeholder="Search..." data-bs-toggle="dropdown" aria-label="Search" id="nav-search-bar" onkeyup="routeFilter(this.value, 'nav-search-dropdown-item')">
          <ul class="dropdown-menu" id="nav-search-dropdown">
            <% routesData.forEach(route =>{
              if (route.route_type > -1){ %>
                  <li><a href="/route/<%= route.route_id %>" class="dropdown-item nav-search-dropdown-item" style="display: none;"><%= route.route_short_name %>: <%= route.route_long_name %></a></li>
             <% }}); %>
          </ul>
        
          <button type="submit" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
              <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
            </svg>
          </button>
        </form>
        </div>
      </div>
    </div>
</header>