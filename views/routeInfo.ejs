<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.routes[routeId].short_name %>: <%= data.routes[routeId].long_name %> </title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container">
        <br>
        <h1><%= data.routes[routeId].short_name %>: <%= data.routes[routeId].long_name %></h1>
    </div>
    <div class="container pt-3">
        <div class="accordion" id="accordionExample">
            <% for (const vehicleId of data.routes[routeId].vehicle_ids){
                const vehicle = data.vehicles[vehicleId] %>
                <div class="accordion-item <% if (vehicle.status == "CANCELED") { %>
                    btn-secondary
                    <% } %>" >
                    <h2 class="accordion-header" >
                    <button class="accordion-button collapsed <% if (vehicle.status == 'CANCELED') { %>
                        bg-secondary text-white
                    <% } else if (vehicle.next_stops[0]?.delay > 60 && vehicle.next_stops[0]?.delay < 301) {%> 
                        bg-warning
                    <% } else if (vehicle.next_stops[0]?.delay > 300) {%> 
                        bg-danger text-white
                    <% } %> " type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= vehicle.vehicle_id %>" aria-expanded="false" aria-controls="collapseTwo">
                        <strong><%= vehicle.vehicle_id %>:</strong> <%= vehicle.status %>
                    </button>
                    </h2>
                    <div id="collapse-<%= vehicle.vehicle_id %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <% for (const stop of vehicle.next_stops) {%>
                            <div class="row">
                                <div class="col-6">
                                    <strong>Stop:</strong> <%= stop.name %>
                                </div>
                                <div class="col-6">
                                    <strong>Delay: </strong> <% if (stop.delay) { %>
                                <%= Math.floor(stop.delay / 60) %>m <%= Math.abs(stop.delay % 60) %>s
                            <%} else {%>
                                None
                            <% } %>
                                </div>
                                
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>
</body>
</html>