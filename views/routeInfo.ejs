<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= data.routes[routeId].short_name %>: <%= data.routes[routeId].long_name %> </title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <div class="container">
        <br>
        <h1>Dublin Transit Tracker</h1>
        <h2><%= data.routes[routeId].short_name %>: <%= data.routes[routeId].long_name %></h2>
        <table>
            <thead>
                <tr>
                    <th scope="col">Bus ID</th>
                    <th scope="col">Direction</th>
                    <th scope="col">Status</th>
                    <th scope="col">Delay</th>
                </tr>
            </thead>
            <tbody>
                <% for (const vehicleId of data.routes[routeId].vehicle_ids){
                    const vehicle = data.vehicles[vehicleId] %>
                    <tr>
                        <th scope="row"><%= vehicle.vehicle_id %> </th>
                        <td>N/A</td>
                        <td><%= vehicle.status %></td>
                        <% if (vehicle.next_stop_delays) { %>
                            <td><%= Math.floor(vehicle.next_stop_delays / 60) %>m <%= Math.abs(vehicle.next_stop_delays % 60) %>s </td>
                        <%} else {%>
                            <td></td>
                        <% } %>
                    </tr>
                <% } %>
            </tbody>
        </table>
    </div>
    <%- include("partials/footer.ejs") %>
</body>
</html>