<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= routeData.short_name %>: <%= routeData.long_name %> </title>
    <link rel="stylesheet" type="text/css" href="/styles/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-SgOJa3DmI69IUzQ2PVdRZhwQ+dy64/BUtbMJw1MZ8t5HZApcHrRKUc4W0kG879m7" crossorigin="anonymous">
</head>
<body>
    <%- include("partials/header.ejs") %>
    <% let tripZeroName = "Trip0"
    let tripOneName = "Trip1"%>
    <div class="container">
        <br>
        <h1><%= routeData[0].short_name %>: <%= routeData[0].long_name %></h1>
    </div>
    <div class="container">
        <div class="container row pt-3">
            <div class="container col-6">
                <h2 id="dir-0-title"> Direction 0: PLACEHOLDER <%#=data.vehicles[Object.keys(data.vehicles).find((key) => data.vehicles[key].direction_id == 1)].trip_data.trip_headsign %>
                    </h2>
                <div class="accordion" id="accordionDirZero">
                    <% for (const vehicle of vehicleList){
                        if (vehicle.direction_id == 1){continue}%>
                        <div class="accordion-item <% if (vehicle.status == "CANCELED") { %>
                            btn-secondary
                            <% } %>" >
                            <h2 class="accordion-header" >
                            <button class="accordion-button collapsed <% if (vehicle.status == 'CANCELED') { %>
                                bg-secondary text-white
                            <%# } else if (vehicle.next_stops[0]?.delay > 60 && vehicle.next_stops[0]?.delay < 301) { 
                                bg-warning%>
                            <%# } else if (vehicle.next_stops[0]?.delay > 300) {
                                bg-danger text-white%>
                            <% } %> " type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= vehicle.vehicle_id %>" aria-expanded="false" aria-controls="collapseTwo">
                            <strong><%= vehicle.vehicle_id %>:</strong> <%= vehicle.status %>... Departs in: <%#= Math.floor((vehicle.start_time.getTime() - Date.now()) / 60000) %> minutes.
                            </button>
                            </h2>
                            <div id="collapse-<%= vehicle.vehicle_id %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <%# for (const stop of vehicle.next_stops) {%>
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Stop:</strong> <%#= stop.name %>
                                        </div>
                                        <div class="col-6">
                                            <strong>Delay: </strong> <%# if (stop.delay) { %>
                                        <%#= Math.floor(stop.delay / 60) %>m <%#= Math.abs(stop.delay % 60) %>s
                                    <%#} else {%>
                                        None
                                    <%# } %>
                                        </div>
                                        
                                    </div>
                                <%# } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
            <div class="container col-6">
                <h2 id="dir-1-title"> Direction 1: PLACEHOLDER<%#=data.vehicles[Object.keys(data.vehicles).find((key) => data.vehicles[key].direction_id == 0)].trip_data.trip_headsign %></h2>
                <div class="accordion" id="accordionDirOne">
                    <% for (const vehicle of vehicleList){
                        if (vehicle.direction_id == 0){continue} %>
                        <div class="accordion-item <% if (vehicle.status == "CANCELED") { %>
                            btn-secondary
                            <% } %>" >
                            <h2 class="accordion-header" >
                            <button class="accordion-button collapsed <% if (vehicle.status == 'CANCELED') {  %>
                            <%# } else if (vehicle.next_stops[0]?.delay > 60 && vehicle.next_stops[0]?.delay < 301) { 
                                bg-warning%>
                            <%# } else if (vehicle.next_stops[0]?.delay > 300) {
                                bg-danger text-white%>
                            <% } %> " type="button" data-bs-toggle="collapse" data-bs-target="#collapse-<%= vehicle.vehicle_id %>" aria-expanded="false" aria-controls="collapseTwo">
                                <strong><%= vehicle.vehicle_id %>:</strong> <%= vehicle.status %>... Departs in: <%#= Math.floor((vehicle.start_time.getTime() - Date.now()) / 60000) %> minutes.
                            </button>
                            </h2>
                            <div id="collapse-<%= vehicle.vehicle_id %>" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <%# for (const stop of vehicle.next_stops) {%>
                                    <div class="row">
                                        <div class="col-6">
                                            <strong>Stop:</strong> <%#= stop.name %>
                                        </div>
                                        <div class="col-6">
                                            <strong>Delay: </strong> <%# if (stop.delay) { %>
                                        <%#= Math.floor(stop.delay / 60) %>m <%#= Math.abs(stop.delay % 60) %>s
                                    <%#} else {%>
                                        None
                                    <%# } %>
                                        </div>
                                        
                                    </div>
                                <%# } %>
                            </div>
                        </div>
                    </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
    <%- include("partials/footer.ejs") %>
</body>
</html>